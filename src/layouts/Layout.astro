---
import '../styles/global.css';
import LoadingScreen from '../components/LoadingScreen';
import PersistentStarBackground from '../components/PersistentStarBackground';
import ThreePaneCarousel from '../components/ThreePaneCarousel';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="alex zheng's personal website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <!-- Resource hints for faster navigation -->
    <link rel="prefetch" href="/timeline" />
    <link rel="prefetch" href="/projects" />
    <link rel="prefetch" href="/contact" />
    <!-- Performance optimization: defer non-critical scripts -->
    <script>
      // Show loading screen immediately - no waiting
      (function() {
        if (typeof document !== 'undefined') {
          var loadingEl = document.getElementById('loading-screen');
          if (!loadingEl) {
            // Create loading screen element if it doesn't exist yet
            var el = document.createElement('div');
            el.id = 'loading-screen';
            el.style.cssText = 'position:fixed;inset:0;z-index:999999;display:flex;align-items:center;justify-content:center;background:transparent;opacity:1;visibility:visible;';
            el.innerHTML = '<div style="font-family:\'Inter\',sans-serif;color:rgba(255,255,255,0.9);text-shadow:0 0 20px rgba(255,255,255,0.5);letter-spacing:2px;">stars aligning...</div>';
            document.body.appendChild(el);
          } else {
            loadingEl.style.display = 'flex';
            loadingEl.style.opacity = '1';
            loadingEl.style.visibility = 'visible';
          }
        }
      })();
    </script>
    <title>{title} | alex zheng</title>
  </head>
  <body style="overflow-x: hidden; position: relative;">
    <PersistentStarBackground client:load />
    <LoadingScreen client:load />
    <ThreePaneCarousel client:only="react" />
    <slot />
    <script is:inline>
      // Ensure loading screen is instantly visible - pre-render it
      (function() {
        if (typeof document !== 'undefined') {
          // Reset page-loaded state
          document.body.classList.remove('page-loaded');
          document.documentElement.classList.remove('page-loaded');
          
          // Show loading screen INSTANTLY - no delays
          var loadingEl = document.getElementById('loading-screen');
          if (loadingEl) {
            loadingEl.style.transition = 'none';
            loadingEl.style.display = 'flex';
            loadingEl.style.opacity = '1';
            loadingEl.style.visibility = 'visible';
            loadingEl.offsetHeight; // Force reflow
            loadingEl.style.transition = 'opacity 0.5s ease-out';
          }
        }
      })();
      
      // Show loading screen immediately when page loads
      (function() {
        if (typeof window !== 'undefined') {
          window.dispatchEvent(new CustomEvent('show-loading'));
        }
      })();
      
      // Intercept all link clicks for carousel navigation
      // Setup immediately, no waiting for DOMContentLoaded
      (function() {
        if (typeof document === 'undefined') return;
        
        function handleClick(e) {
          try {
            var target = e.target;
            var link = target.closest ? target.closest('a[href]') : null;
            if (!link) {
              // Fallback for older browsers
              var parent = target;
              while (parent && parent !== document) {
                if (parent.tagName === 'A' && parent.href) {
                  link = parent;
                  break;
                }
                parent = parent.parentElement;
              }
            }
            
            if (link && link.href) {
              var href = link.getAttribute('href');
              if (!href) return;
              
              var isExternal = !href.startsWith('/') && !href.startsWith(window.location.origin);
              var isSpecial = href.startsWith('mailto:') || href.startsWith('tel:') || href.startsWith('#');
              
              if (!isExternal && !isSpecial) {
                // Same origin navigation - let carousel handle it
                e.preventDefault();
                e.stopPropagation();
                e.stopImmediatePropagation();
                
                // Trigger carousel navigation via custom event
                window.dispatchEvent(new CustomEvent('carousel-navigate', { 
                  detail: { path: href } 
                }));
              }
            }
          } catch (err) {
            console.error('Error in click handler:', err);
          }
        }
        
        // Add listener immediately in capture phase (highest priority)
        document.addEventListener('click', handleClick, true);
      })();
    </script>
  </body>
</html>
