---
import Layout from '../layouts/Layout.astro';
import MagicalText from '../components/MagicalText';

const planetColor = '#FAD5A5'; // Saturn
const planetColorRgb = '250, 213, 165';
---

<Layout title="saturn.">
  <div class="saturn-page h-screen relative overflow-hidden" style="background: transparent;">
    <!-- Star background -->
    <div class="absolute inset-0 page-starfield"></div>
    <div class="saturn-scene" aria-hidden="true">
      <svg class="saturn-rings saturn-rings-back" viewBox="0 0 2000 600" preserveAspectRatio="none" aria-hidden="true">
        <ellipse cx="1000" cy="300" rx="920" ry="230" />
        <ellipse cx="1000" cy="300" rx="840" ry="210" />
        <ellipse cx="1000" cy="300" rx="760" ry="190" />
        <ellipse cx="1000" cy="300" rx="690" ry="172" />
        <ellipse cx="1000" cy="300" rx="610" ry="154" />
      </svg>
      <div class="saturn-planet"></div>
      <svg class="saturn-rings saturn-rings-front" viewBox="0 0 2000 600" preserveAspectRatio="none" aria-hidden="true">
        <ellipse cx="1000" cy="300" rx="920" ry="230" />
        <ellipse cx="1000" cy="300" rx="840" ry="210" />
        <ellipse cx="1000" cy="300" rx="760" ry="190" />
        <ellipse cx="1000" cy="300" rx="690" ry="172" />
        <ellipse cx="1000" cy="300" rx="610" ry="154" />
      </svg>
    </div>
    <div class="max-w-7xl mx-auto px-10 py-24 relative z-10">
      <div class="max-w-6xl animate-fade-in">
        <div class="border-l-4 pl-6 mb-8" style={`border-color: rgba(${planetColorRgb}, 0.4);`}>
          <h1 class="text-3xl font-medium mb-4 lowercase tracking-tight">
            <MagicalText text="saturn." color="#1b1b1b" colorRgb="27, 27, 27" client:load />
          </h1>
        </div>
      </div>
    </div>
  </div>
</Layout>

