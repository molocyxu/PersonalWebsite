---
import Layout from '../layouts/Layout.astro';
import MagicalText from '../components/MagicalText';

const planetColor = '#D8CA9D'; // Jupiter
const planetColorRgb = '216, 202, 157';
---

<Layout title="placeholder">
  <div class="min-h-screen relative overflow-hidden" style="background: transparent;">
    <!-- Star background -->
    <div class="absolute inset-0 page-starfield"></div>
    <div class="max-w-7xl mx-auto px-10 py-24 relative z-10">
      <div class="max-w-6xl animate-fade-in">
        <div class="border-l-4 pl-6 mb-8" style={`border-color: rgba(${planetColorRgb}, 0.4);`}>
          <h1 class="text-3xl font-medium mb-4 lowercase tracking-tight">
            <MagicalText text="placeholder" color={planetColor} colorRgb={planetColorRgb} client:load />
          </h1>
          <div class="h-px w-24 mb-6" style={`background: linear-gradient(to right, rgba(${planetColorRgb}, 0.6), transparent);`}></div>
        </div>
        <div class="bg-black/90 backdrop-blur-sm rounded-2xl p-8 border" style={`border-color: rgba(${planetColorRgb}, 0.15);`}>
          <p class="text-sm text-gray-300 font-light leading-relaxed" style="color: rgba(255, 255, 255, 0.7);">
            This page will showcase placeholder content. Content coming soon.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>
