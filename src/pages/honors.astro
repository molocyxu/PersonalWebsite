---
import Layout from '../layouts/Layout.astro';
import MagicalHoverCard from '../components/MagicalHoverCard';
import MagicalText from '../components/MagicalText';

const planetColor = '#4FD0E7'; // Uranus
const planetColorRgb = '79, 208, 231';
---

<Layout title="honors">
  <div class="min-h-screen relative overflow-hidden" style="background: transparent;">
    <!-- Star background -->
    <div class="absolute inset-0 page-starfield"></div>
    <div class="saturn-scene saturn-scene-right" aria-hidden="true">
      <svg class="saturn-rings saturn-rings-back" viewBox="0 0 2000 600" preserveAspectRatio="none" aria-hidden="true">
        <ellipse cx="1000" cy="300" rx="920" ry="230" />
        <ellipse cx="1000" cy="300" rx="840" ry="210" />
        <ellipse cx="1000" cy="300" rx="760" ry="190" />
        <ellipse cx="1000" cy="300" rx="690" ry="172" />
        <ellipse cx="1000" cy="300" rx="610" ry="154" />
      </svg>
      <div class="saturn-planet"></div>
      <svg class="saturn-rings saturn-rings-front" viewBox="0 0 2000 600" preserveAspectRatio="none" aria-hidden="true">
        <ellipse cx="1000" cy="300" rx="920" ry="230" />
        <ellipse cx="1000" cy="300" rx="840" ry="210" />
        <ellipse cx="1000" cy="300" rx="760" ry="190" />
        <ellipse cx="1000" cy="300" rx="690" ry="172" />
        <ellipse cx="1000" cy="300" rx="610" ry="154" />
      </svg>
    </div>
    <!-- Uranus color tint -->
    <div class="absolute inset-0 opacity-15" style={`background: radial-gradient(ellipse at center, rgba(${planetColorRgb}, 0.2), rgba(${planetColorRgb}, 0.05) 50%, transparent 80%);`}></div>
    <div class="max-w-7xl mx-auto px-10 py-24 relative z-10">
      <div class="max-w-6xl animate-fade-in">
        <div class="border-l-4 pl-6 mb-8" style="border-color: rgba(79, 208, 231, 0.4);">
          <h1 class="text-3xl font-medium mb-4 lowercase tracking-tight">
            <MagicalText text="honors" color={planetColor} colorRgb={planetColorRgb} client:load />
          </h1>
          <div class="h-px w-24 mb-6" style="background: linear-gradient(to right, rgba(79, 208, 231, 0.6), transparent);"></div>
        </div>
        <div id="cards"></div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>
